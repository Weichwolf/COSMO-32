10 REM ON...GOTO/GOSUB test
20 PRINT "Testing ON...GOTO:"
30 FOR CHOICE = 1 TO 4
40 ON CHOICE GOTO 100, 200, 300
50 PRINT "CHOICE="; CHOICE; " fell through"
60 GOTO 400
100 PRINT "CHOICE="; CHOICE; " -> jumped to 100"
110 GOTO 400
200 PRINT "CHOICE="; CHOICE; " -> jumped to 200"
210 GOTO 400
300 PRINT "CHOICE="; CHOICE; " -> jumped to 300"
310 GOTO 400
400 NEXT CHOICE
500 PRINT "Testing ON...GOSUB:"
510 FOR OPTION = 1 TO 3
520 ON OPTION GOSUB 600, 700, 800
530 PRINT "Returned from subroutine"
540 NEXT OPTION
550 PRINT "Test complete!"
560 END
600 PRINT "In subroutine 1"
610 RETURN
700 PRINT "In subroutine 2"
710 RETURN
800 PRINT "In subroutine 3"
810 RETURN
